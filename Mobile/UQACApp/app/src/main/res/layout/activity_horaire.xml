<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/navigation_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Bienvenue Julien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_bienvenue"
            android:textSize="36sp"
            android:textColor="@android:color/black" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <TextView
            android:text="8IFG206"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="Automne 2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="268dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_today_black_48dp"
                    android:id="@+id/imageButton3"
                    android:visibility="visible"
                    android:background="@android:color/background_light"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp"
                    android:text="Horaire: \ndu JOUR dd/mm/aaaa \nau JOUR dd/mm/aaaa   \n\nde hh:mm à hh:mm \nLocal: X#-####"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_card_travel_black_48dp"
                    android:id="@+id/imageButton6"
                    android:visibility="visible"
                    android:background="@android:color/background_light"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp"
                    android:text="Enseignant(s): \nM. Abcd efghijk"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp" />

            </TableRow>

        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="90dp">

            <TextView
                android:text="abcd_efghijk.1@uqac.ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="24sp"
                android:layout_marginTop="5dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_reply_black_48dp"
                    android:id="@+id/imageButton7"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:text="Retour à la liste de cours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/menu_main"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>

