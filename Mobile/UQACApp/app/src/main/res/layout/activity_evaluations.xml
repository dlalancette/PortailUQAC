<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <include layout="@layout/navigation_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Bienvenue Julien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_bienvenue"
            android:textSize="36sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <TextView
            android:text="8IFG206"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="Automne 2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <TextView
                    android:text="Éléments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:text="Résultats"
                    android:textColorHighlight="@android:color/black"
                    android:layout_marginLeft="45dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Pondération"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="25dp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="TP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="97/100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_marginLeft="45dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="14.55/15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_marginLeft="25dp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:text="Examen 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="34/35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="45dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="34/35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:layout_marginLeft="25dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:layout_marginTop="5dp">

                <TextView
                    android:text="TP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="100/100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="45dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="15/15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:layout_marginLeft="25dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_marginTop="100dp">

                <TextView
                    android:text="TOTAL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26" />

                <TextView
                    android:text="63.55/65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="25dp"
                    android:textStyle="normal|bold" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_insert_chart_black_48dp"
                    android:id="@+id/imageButton"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:text="Répartition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_reply_black_48dp"
                    android:id="@+id/imageButton7"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:text="Retour à la liste de cours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/menu_main"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
